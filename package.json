{
  "name": "@gyeonghokim/vega",
  "private": "false",
  "version": "0.0.0-development",
  "description": "Lightweight Video Player",
  "author": "GyeongHo Kim",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/GyeongHoKim/vega.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "tag": "latest",
    "access": "public",
    "provenance": true
  },
  "bugs": {
    "url": "https://github.com/GyeongHoKim/vega/issues"
  },
  "homepage": "https://github.com/GyeongHoKim/vega#readme",
  "type": "module",
  "main": "./dist/video-renderer.umd.cjs",
  "module": "./dist/video-renderer.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/video-renderer.js",
      "require": "./dist/video-renderer.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "build": "vite build && tsc -p tsconfig.build.json",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@commitlint/cli": "20.4.1",
    "@commitlint/config-conventional": "20.4.1",
    "@vitest/browser": "4.0.18",
    "@vitest/browser-playwright": "4.0.18",
    "@webgpu/types": "^0.1.69",
    "husky": "9.1.7",
    "semantic-release": "25.0.3",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vitest": "4.0.18"
  },
  "engines": {
    "node": ">=20"
  }
}
